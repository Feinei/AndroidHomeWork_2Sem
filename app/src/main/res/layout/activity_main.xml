<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBack"
    android:padding="10dp"
    tools:context=".view.MainActivity">

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/sv_food"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_searchHint="Search food..."
        app:floatingSearch_showSearchKey="false"
        app:floatingSearch_suggestionsListAnimDuration="250"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_food"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_food"
        tools:listitem="@layout/item_food" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="PacmanIndicator"
        app:layout_constraintBottom_toBottomOf="@id/rv_food"
        app:layout_constraintEnd_toEndOf="@id/rv_food"
        app:layout_constraintStart_toStartOf="@id/rv_food"
        app:layout_constraintTop_toTopOf="@id/rv_food" />

</androidx.constraintlayout.widget.ConstraintLayout>